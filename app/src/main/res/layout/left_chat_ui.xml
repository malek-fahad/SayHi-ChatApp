<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="60dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatUserImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/img_profile_male_avatar"
        android:layout_marginStart="8dp"/>


    <TextView
        android:id="@+id/chatMessageTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/left_chat_ui"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/chatMessageImg"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/downloading_photo"
        android:src="@drawable/img_profile_cover"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>


</LinearLayout>